@model IEnumerable<Banco.Models.Post>

@{
    ViewBag.Title = "Home Page";
}

<div class="card-small row">
    <ul>
        <li>
            <div class="col-md-12">
                <div class="row card portada">
                    <div class="portada card-image waves-effect waves-block waves-light">
                        <img class="activator" src="http://hibult-static.websplanetdemo.com/var/m_f/f0/f0c/46688/699429-morressi-robles-bienes-raices-banner.jpg?1456246043584?v=6.5.1.35040">
                    </div>
                </div>
            </div>
        </li>
    </ul>
</div>



<div class="row">
    @foreach (var item in Model)
    {

        <div class="center col-md-4">
            <div class="card card-panel hoverable">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" src="@Html.DisplayFor(modelItem => item.image)">
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4"> @Html.DisplayFor(modelItem => item.description) <i class="material-icons right">more_vert</i></span>
                    <p><a href="/Posts/PostsBienes/@Html.DisplayFor(modelItem => item.id_post)">Ver</a></p>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">Descripcion de la propiedad<i class="material-icons right">close</i></span>
                    <p class="truncate">@Html.DisplayFor(modelItem => item.contenido)</p>
                </div>
            </div>
        </div>
    }
</div>


